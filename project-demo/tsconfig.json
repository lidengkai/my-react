{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "types": [],
    "paths": {
      "@/*": ["./src/*"],
      "@components/common/*": ["./my-components/react-common/src/*"],
      "@components/hooks/*": ["./my-components/react-hooks/src/*"],
      "@components/components/*": ["./my-components/react-web/src/*"]
    }
  },
  "include": [
    "src",
    "my-components/react-common/src",
    "my-components/react-hooks/src",
    "my-components/react-web/src"
  ],
  "exclude": ["node_modules"]
}
